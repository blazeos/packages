NAME="perl"
FILENAME="perl-5.30.0.tar.gz"
SOURCE="https://www.cpan.org/src/5.0/$FILENAME"

build() {
	tar xf "$CACHE_DIR/$FILENAME" -C "$BUILD_DIR"
	cd "$BUILD_DIR/perl-5.30.0"
	
	sh Configure \
		-des \
		-Dprefix=$INSTALL_DIR \
		-Dvendorprefix=$INSTALL_DIR \
		-Duseshrplib \
		-Dusethreads \
		-Dtargetarch=$ARCH \
		-Uinstallusrbinperl
		
	make -j$(nproc) V=1
}

install() {
	make install
	rm -rf "$INSTALL_DIR/lib/site_perl"
}
